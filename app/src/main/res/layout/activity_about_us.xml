<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back1"
    tools:context="com.Alatheer.Riad.Alqassim.Activities.ActivityAboutUs">


        <Button
            android:text="@string/address"
            android:background="@drawable/schoollocation"
            android:id="@+id/btn_school_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            />




            <TextView
                android:paddingRight="40dp"
                android:paddingLeft="10dp"
                android:background="@drawable/school_name"
                android:id="@+id/txt_schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                />



        <TextView
            android:background="@drawable/schoolemail"
            android:id="@+id/txt_schoolemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:background="@drawable/schoolfax"
            android:id="@+id/txt_schoolfax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            />

            <TextView
                android:id="@+id/txt_schoolphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/schoolphone"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_marginTop="15dp"

                />



</LinearLayout>
